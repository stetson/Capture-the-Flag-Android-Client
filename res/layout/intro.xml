<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/main_frame"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
>
	<ScrollView
	android:id="@+id/games_frame"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:layout_weight="1"
	android:gravity="top"
	android:padding="5px"
	android:layout_above="@+id/controls_frame"
	>
	
		<LinearLayout
		android:id="@+id/games_list_container"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		>
			<RadioGroup
			android:id="@+id/games_list_group"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			></RadioGroup>
		</LinearLayout>
	
	</ScrollView>
	
	<RelativeLayout
	android:id="@+id/controls_frame"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_alignParentBottom="true"
	android:padding="5px"
	android:layout_weight="1"
	android:gravity="bottom"
	>
		<EditText
		android:id="@+id/name_text"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/enter_name"
		android:imeOptions="actionSend|flagNoEnterAction"
		android:textSize="18sp"
		android:layout_centerHorizontal="true"
		></EditText>
		
		<Button
		android:id="@+id/joingame_button"
		android:layout_width="120px"
		android:layout_height="wrap_content"
		android:text="@string/join_game"
		android:layout_below="@+id/name_text"
		android:layout_alignParentLeft="true" 
		>
		</Button>
		
		<Button
		android:id="@+id/newgame_button"
		android:layout_width="120px"
		android:layout_height="wrap_content"
		android:text="@string/create_game"
		android:layout_below="@+id/name_text"
		android:layout_alignParentRight="true" 
		>
		</Button>
	
	</RelativeLayout>
	
</RelativeLayout>
