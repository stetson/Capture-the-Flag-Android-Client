<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:layout_weight="2"
android:focusable="true" 
android:focusableInTouchMode="true"
android:background="#d5d5d5"
>
	
		<ImageView
		android:id="@+id/loading_image"
		android:background="@drawable/load_screen3"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:scaleType="fitXY"
		/>
		<TextView
		android:id="@+id/games"
	    style="@style/coolFont"
	    android:text="a;sdkjfa;skfj;askjf;as"
	    android:layout_above="@+id/ctfwords"
	    android:layout_centerHorizontal="true"
	    />
		<ImageView
		android:id="@+id/ctfwords"
		android:src="@drawable/ctfwords"
		android:layout_width="wrap_content"
		android:layout_above="@+id/guest"
		android:layout_height="50px"
		android:scaleType="fitXY"
		/>
		<Button
		android:id="@+id/guest"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/guest_button"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true" 
		>
		</Button><Button
		android:id="@+id/facebook"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/facebook_button"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		>
		</Button>
		
</RelativeLayout>
